<div class="banner">
  <div class="container">
    <h1>HOTELS & TRIPS</h1>
    <p>Welcome Michel !</p>
  </div>
</div>

<div class="baseline"><p>All the trips you ever dreamed of at your fingertips</p></div>

<div class="searchbar">
  <%= form_tag destinations_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "I want to travel to"
    %>
    <%= submit_tag "Go!", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 w-4/5 mx-auto gap-3">
  <% @destinations.each do |destination|%>
  <%= render 'destination_card', destination: destination, class: 'w-full' %>
  <% end %>
</div>

